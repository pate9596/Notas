@page
@using GestionNotas.Models 
@using MongoDB.Bson.Serialization.Serializers;


@model LoginModel
@{
    Layout = "~/Pages/Shared/_Cuenta.cshtml";
    ViewData["Title"] = "Notas";
}

<section class="section">
    <form autocomplete='off' class='form'>
  <div class='control'>
    <h1 style="margin: auto;">Iniciar sesión</h1>
  </div>
  <div class='control block-cube block-input'>
    <input name='Email' placeholder='Correo Electronico' type='text'>
    <div class='bg-top'>
      <div class='bg-inner'></div>
    </div>
    <div class='bg-right'>
      <div class='bg-inner'></div>
    </div>
    <div class='bg'>
      <div class='bg-inner'></div>
    </div>
  </div>
  <div class='control block-cube block-input'>
    <input name='password' placeholder='Password' type='password'>
    <div class='bg-top'>
      <div class='bg-inner'></div>
    </div>
    <div class='bg-right'>
      <div class='bg-inner'></div>
    </div>
    <div class='bg'>
      <div class='bg-inner'></div>
    </div>
  </div>
  <button class='btn block-cube block-cube-hover' type='button'>
    <div class='bg-top'>
      <div class='bg-inner'></div>
    </div>
    <div class='bg-right'>
      <div class='bg-inner'></div>
    </div>
    <div class='bg'>
      <div class='bg-inner'></div>
    </div>
    <div class='text'>
      Crear Cuenta
    </div>
  </button>
    <div class='control'>
        <p class='text'>
        ¿No tienes cuenta? <a href="/Register">Regístrate aquí</a>
        </p>
  </div>
</form>

</section>